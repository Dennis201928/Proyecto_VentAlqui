# Configuraci칩n para Apache
RewriteEngine On

# Base path del proyecto
RewriteBase /Proyecto_VentAlqui/public/

# Permitir acceso a archivos est치ticos
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*$ - [L]

# Permitir acceso a directorios
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [L]

# Redirigir todo lo dem치s a index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Configuraci칩n de seguridad
<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>

# Prevenir acceso a archivos sensibles
<FilesMatch "\.(sql|log|txt|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

